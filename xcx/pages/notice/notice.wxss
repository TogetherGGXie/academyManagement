/* pages/jyz/jyz.wxss */
page {
  background: #0C72C2;
}
.page {
  width: 94vw;
  display: inline-block;
  padding: 1vw 3vw;
  overflow-x: hidden;
}
.tabs {
  width: 94vw;
  display: inline-block;
  overflow: hidden;
  _zoom: 1;
}
.tab {
  position: relative;
  padding: 12px 2vw;
  color: #fff;
  font-size: 14px;
  background-color: #0B66AD;
  border-radius: 2vw;
  margin: 1vw 1vw 2vw 1vw;
  width: 17.5vw;
  float: left;
  text-align: center;
}
.tab.choose {
  color: #0B66AD;
  background-color: #fff;
}
.choose:after {
  position: absolute;
  content: '';
  right: 8.8vw;
  bottom: -2.4vw;
  width: 0;
  height: 0;
  border-left: 1.2vw solid transparent;
  border-right: 1.2vw solid transparent;
  border-top: 2.4vw solid #fff;
  z-index: 5;
}
.item {
  position: relative;
  background-color: #fff;
  border-radius: 8px;
  width: 38vw;
  padding: 0vw 3vw 4vw 4vw;
  float: left;
  margin-bottom: 3vw;
}
.item:nth-child(odd) {
  margin-right: 1.5vw;
}
.item:nth-child(even) {
  margin-left: 1.5vw;
}
.book {
  background-color: #FFAF4C;
  border-radius: 0px 0vw 2vw 2vw;
  padding: 1vw 2vw;
  display: inline-block;
}
.book-image {
  width: 4.7vw;
  height: 42rpx;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
  display: inline-block;
}
.itemNameImg{
  width: 100%;
  height: 162rpx;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
  display: inline-block;
}
.title {
  font-size: 13px;
  color: #000;
  margin-top: 4vw;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  min-height: 57px; 
}
.read-view {
  position: relative;
  font-size: 12px;
  color: #ffaa46;
  background-color: #fff5e5;
  display: inline-block;
  padding: 1vw 2vw;
  margin-top: 4vw;
}
scroll-view {
  width: 105%;
}
.nothing {
  position: absolute;
  background-image: url(https://st-file.yunban.cn/20180524/nothing.png);
  background-position: center;
  background-repeat: no-repeat;
  background-size: contain;
  width: 170px;
  height: 170px;
  top: 0px;
  right: 0px;
  left: 0px;
  bottom: 0px;
  margin: auto;
}
.hide {
  display: none;
}