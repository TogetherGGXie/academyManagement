/* pages/dblz/dblz.wxss */
page {
  background: #0C72C2;
}
.page {
  padding: 1vh 3vw;
}
.success {
  position: relative;
  width: 78vw;
  background-color: #fff;
  z-index: 7;
  display: inline-block;
  border-radius: 6px;
  padding: 8vw 8vw 0vw 8vw;
  text-align: center;
}
.text {
  color: #c2c2c2;
  font-size: 14px;
  margin-bottom: 8vw;
}
.success-image {
  display: inline-block;
  width: 64vw;
  height: 50vw;
  background-image: url('https://st-file.yunban.cn/20180524/sign.png');
  background-position: top;
  background-size: contain;
  background-repeat: no-repeat;
}
.item {
  position: relative;
  width: 86vw;
  padding: 3vw 4vw;
  background-color: #fff;
  color: #000;
  font-size: 14px;
  border-radius: 6px;
  margin-top: 3vw;
}
.item view {
  display: inline-block;
}
.icon {
  width: 18px;
  height: 18px;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
  margin-bottom: -4px;
  margin-right: 7px;
}
.arrow {
  width: 6px;
  height: 12px;
  position: absolute;
  background-image: url("https://st-file.yunban.cn/20180524/arrow.png");
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
  margin-top: 4px;
  right: 4vw;
}