/* pages/yjt/jcwd/jcwd.wxss */
@import "../../style/common.wxss";

.page-container {
  position: relative;
  padding: 5vw;
  background-color: #0C72C2;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.left-chain {
  position: absolute;
  top: 17.2vw;
  left: 8vw;
  width: 3vw;
  height: 73rpx;
}

.right-chain {
  position: absolute;
  top: 17.2vw;
  right: 8vw;
  width: 3vw;
  height: 73rpx;
}

.header {
  width: 100%;
  height: 120rpx;
  border-radius: 8px;
  background-color: #fff;
}

.header image {
  width: 50rpx;
  height: 50rpx;
}

.header text {
  margin-left: 20rpx;
  font-size: 38rpx;
  font-weight: 700;
}

.main {
  width: 100%;
  height: calc(100% - 300rpx);
  padding: 0 5vw;
  margin-top: 2vw;
  border-top: 50rpx solid #fff;
  border-bottom: 20rpx solid #fff;
  border-radius: 15rpx;
  background-color: #fff;
}

.list-box {
  width: 100%;
  height: 100%;
}

.main-scroll {
  width: 100%;
  height: 100%;
}

.main .one {
  margin-top: 30rpx;
  font-size: 30rpx;
  color: #333;
}

.main .one:nth-child(1) {
  margin-top: 0;
}

.main .one .label {
  margin-right: 15rpx;
  font-weight: 600;
}

.main .one .one-info:nth-child(2) {
  margin-top: 10rpx;
}

.btn-box {
  width: 100%;
  margin-top: 40rpx;
}

.btn-box .btn {
  padding: 3vw 7vw;
  color: #fff;
  font-size: 30rpx;
  border-radius: 20rpx;
  background: linear-gradient(#45A5EF, #3399FF);
}