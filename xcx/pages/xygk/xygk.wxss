page{
  position: relative;
  width: 100vw;
  height: 100vh;
  background-color: #fff;
}
#item, .page1{
  position: relative;
  width: 100%;
  height: 100%;
}
.page2{
  position: relative;
  width: 100%;
  height: auto;
}
.bgImg{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}
.line{
  position: absolute;
  width: 428rpx;
  height: 90rpx;
  left: 0;
  right: 0;
  margin: auto;
  top: 150rpx;
}
.line2{
  top: 300rpx;
}
.line3{
  top: 450rpx;
  display: block
}
.line4{
  top: 600rpx;
  display: block
}
.line5{
  top: 750rpx;
  display: block
}
.line6{
  top: 900rpx;
  display: block
}
.show{
  display: block 
}
.hide{
  display: none
}
.itemsImg{
  width: 100%;
  /* height: 100%; */
}
.arrowImg{
  width: 72rpx;
  height: 72rpx;
  position: fixed;
  top: 2vw;
  left: 2vw;
}
.lowerImg{
  width: 45rpx;
  height: 42rpx;
  position: fixed;
  bottom: 4vw;
  left: 0;
  right: 0;
  margin: auto;
  animation: translateBottom 1s linear infinite;
  -webkit-animation: translateBottom 1s linear infinite;
}
@keyframes translateBottom {
  0% { transform: translate(0,0) }
  100% { transform: translate(0,5vw) }
}
@-webkit-keyframes translateBottom {
  0% { -webkit-transform: translate(0,0) }
  100% { -webkit-transform: translate(0,5vw) }
}