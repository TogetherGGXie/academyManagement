/* pages/rddbllz/record/record.wxss */
@import "../../style/common.wxss";

#recordPage {
  background-color: #f3f2f6;
}

#recordPage .title-img {
  position: absolute;
  top: 7vw;
  left: 25vw;
  width: 50vw;
  height: 110rpx;
  z-index: 10;
}

#recordPage .btn-back {
  position: absolute;
  bottom: 5vw;
  left: 33vw;
  width: 34vw;
  height: 75rpx;
  color: #fff;
  font-size: 30rpx;
  border-radius: 8px;
  background: linear-gradient(#fea191, #f96966);
}

#recordPage .main {
  position: absolute;
  top: 13vw;
  left: 5vw;
  width: 90vw;
  height: 80vh;
  padding: 1vw;
  border-radius: 10px;
  border-top: 8vw solid #fff;
  border-bottom: 2vw solid #fff;
  background-color: #fff;
}

#recordPage .main .one {
  position: relative;
  width: 100%;
  padding: 3vw;
  border-bottom: 1px solid #fceeeb;
}

#recordPage .main .one .head-img {
  width: 21vw;
  height: 27vw;
}

#recordPage .main .one .name {
  position: absolute;
  top: 20rpx;
  left: 27vw;
  color: #2a2a2a;
  font-size: 30rpx;
  font-weight: 600;
}

#recordPage .main .one .time {
  position: absolute;
  top: 24 rpx;
  right: 3vw;
  color: #999;
  font-size: 28rpx;
  font-weight: 600;
}

#recordPage .main .one .tip {
  position: absolute;
  top: 70rpx;
  left: 27vw;
  color: #999;
  font-size: 26rpx;
}

#recordPage .main .one .btn-box {
  position: absolute;
  bottom: 4vw;
  right: 5vw;
}

#recordPage .main .one .btn {
  background: linear-gradient(rgb(249,102,100), rgb(250, 130, 110));
  display: inline-block;
  padding: 1vw 6vw 1.5vw 6vw;
  color: #fff;
  font-size: 14px;
  border-radius: 20px;
}

#recordPage .main .one .btn.btn-disabled {
  color: #666;
  background: #eee;
}

#recordPage .main .one .btn:nth-child(2) {
  margin-left: 30rpx;
}

#commentPage {
  position: absolute;
  top: 0;
  left: 0;
  background-color: rgba(0,0,0,.8);
  z-index: 100;
}

#commentPage .main {
  position: relative;
  width: 80vw;
  padding: 15vw 7vw 10vw;
  text-align: center;
  border-radius: 10px;
  background-color: #fff;
}

#commentPage .main .title-circle {
  position: absolute;
  top: -80rpx;
  left: 50%;
  width: 23vw;
  height: 23vw;
  transform: translate3d(-50%, 0, 0);
  border: 5px solid #fff;
  border-radius: 50%;
  box-shadow: 0px 10px 24px 0px rgba(0,0,0,0.1);
}

#commentPage .main text {
  display: block;
}

#commentPage .main .name {
  color: #242e42;
  font-size: 32rpx;
  font-weight: 600;
}

#commentPage .main .desc1 {
  margin-top: 30rpx;
  color: #e5573f;
  font-size: 32rpx;
}

#commentPage .main .desc2 {
  color: #a1a1a5;
  font-size: 26rpx;
}

#commentPage .main .star-box {
  width: 100%;
  margin-top: 30rpx;
  padding: 0 1vw;
}

#commentPage .main .star-box .one {
  width: 18vw;
  height: 58rpx;
  color: #fff;
  font-size: 28rpx;
  border-radius: 20px;
  background-color: #a1a1a5;
}

#commentPage .main .star-box .one.selected {
  background-color: rgb(249,102,100);
}

#commentPage .main .star-box image {
  width: 60rpx;
}

#commentPage .main .comment-box {
  width: 100%;
  margin-top: 30rpx;
}

#commentPage .main .comment-box .comment-value {
  width: 100%;
  height: 200rpx;
  padding: 4vw;
  text-align: left;
  font-size: 30rpx;
  border-radius: 5px;
  background-color: #f7f7f9;
}

#commentPage .main .btn {
  width: 100%;
  margin-top: 50rpx;
  padding: 3vw 0;
  color: #fff;
  font-size: 30rpx;
  border-radius: 10px;
}

#commentPage .main .close {
  position: absolute;
  bottom: -160rpx;
  left: 50%;
  width: 20vw;
  height: 20vw;
  transform: translate3d(-50%, 0, 0);
}

.flex-row-start {
  align-items: flex-start;
}

#commentPage.flex-row-start .main {
  margin-top: 17vw;
}