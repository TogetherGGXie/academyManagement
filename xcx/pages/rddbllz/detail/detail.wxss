/* pages/rddbllz/detail/detail.wxss */
@import "../../style/common.wxss";

#infoPage .card-top {
  position: relative;
  width: 94vw;
  padding: 3vw 3vw 5vw 3vw;
  margin: 0 auto;
  background-color: #fff;
  border-radius: 8px;
}

#infoPage .card-top .head-img {
  width: 21vw;
  height: 27vw;
  margin-right: 3vw;  
}

#infoPage .card-top .name {
  color: #000;
  font-size: 14px;
}

#infoPage .card-top .btn-box {
  position: absolute;
  bottom: 4vw;
  right: 5vw;
}

#infoPage .card-top .btn-box .btn {
  background: linear-gradient(rgb(249,102,100), rgb(250, 130, 110));
  display: inline-block;
  padding: 1vw 6vw 1.5vw 6vw;
  color: #fff;
  font-size: 14px;
  border-radius: 20px;
}

#infoPage .card-top .btn-box .btn:nth-child(2) {
  margin-left: 4vw;
}

#infoPage .card-top .left-chain {
  position: absolute;
  bottom: -6vw;
  width: 3vw;
  left: 5vw;
}

#infoPage .card-top .right-chain {
  position: absolute;
  bottom: -6vw;
  width: 3vw;
  right: 5vw;
}

#infoPage .card-bottom {
  padding: 6vw 4vw 2vw 4vw;
  width: 94vw;
  border-radius: 8px;
  background-color: #fff;
  margin: 2vw auto 0;
}

#infoPage .card-bottom .one-info {
  position: relative;
  margin-bottom: 3vw;
  font-size: 14px;
}

#infoPage .card-bottom .one-info .icon {
  height: 16px;
  width: 16px;
  margin-right: 2vw;
  flex-shrink: 1;
}

#infoPage .card-bottom .one-info .label {
  position: relative;
  margin-bottom: 1px;
  margin-right: 3vw;
  font-weight: 600;
}

#infoPage .card-bottom .one-info .label text {
  display: inline-block;
  width: 4em;
  text-align: justify;
  text-align-last: justify;
}

#infoPage .card-bottom .one-info .info-con {
  display: block;
  width: 445rpx;
  color: #7e7e7e;
}

#orderPage {
  position: absolute;
  top: 0;
  left: 0;
  background-color: rgba(0,0,0,.8);
}

#orderPage .main {
  position: relative;
  width: 80vw;
  background-color: #fff;
  background-image: url('https://st-file.yunban.cn/20180524/top.png');
  background-position: top;
  background-size: contain;
  background-repeat: no-repeat;
  z-index: 7;
  /* margin: auto; */
  border-radius: 6px;
  padding-top: 20vw;
}

#orderPage .main .item {
  position: relative;
  margin: 8vw 8vw 2vw 8vw;
  font-size: 14px;
  border-bottom: 1.5px solid #e1e1e1;
}

#orderPage .main .item.focus {
  border-bottom: 1.5px solid #e65740;
}

#orderPage .main .item .label {
  position: relative;
  display: block;
  margin-bottom: 1px;
  margin-right: 3vw;
  font-weight: 600;
}

#orderPage .main .item input {
  margin-top: 6px;
  padding-bottom: 5px;
  color: #e65740;
}

#orderPage .main .item .code-input {
  width: 40vw;
}

#orderPage .main .item .code {
  position: absolute;
  display: inline-block;
  color: #e1e1e1;
  font-size: 12px;
  border: 1px solid #e1e1e1;
  padding: 2px 4px;
  bottom: 5px;
  right: 0px;
}

#orderPage .main .item .code.show {
  border: 1px solid #e65740;
  color: #e65740;
}

#orderPage .main .btn-box .btn {
  font-size: 16px;
  color: #fff;
  background: linear-gradient(rgb(249,102,100), rgb(250, 130, 110));
  display: inline-block;
  padding: 1vw 15vw 1.5vw 15vw;
  border-radius: 20px;
  position: relative;
  margin: 6vw 0vw;
  line-height: 6vw;
}

#orderPage .close {
  width: 10vw;
  height: 10vw;
  margin-top: 10vw;
}

#orderSuccessPage {
  position: absolute;
  top: 0;
  left: 0;
  background-color: rgba(0,0,0,.8);
}

#orderSuccessPage .main {
  width: 80vw;
  background-color: #fff;
  z-index: 7;
  display: inline-block;
  border-radius: 6px;
  padding: 8vw 8vw 0vw 8vw;
}

#orderSuccessPage .main .success-img {
  width: 64vw;
  height: 60vw;
}

#orderSuccessPage .main .desc {
  font-size: 15px;
  font-weight: 600;
}

#orderSuccessPage .main .btn-box {
  text-align: center;
}

#orderSuccessPage .main .btn {
  font-size: 16px;
  color: #fff;
  background: linear-gradient(rgb(249,102,100), rgb(250, 130, 110));
  padding: 1vw 15vw 1.5vw 15vw;
  border-radius: 20px;
  position: relative;
  margin: 6vw 0vw;
}

#orderNoticePage {
  position: absolute;
  top: 0;
  left: 0;
  background-color: rgba(0,0,0,.8);
}

#orderNoticePage .main {
  position: relative;
  width: 80vw;
  padding: 15vw 7vw 10vw;
  text-align: center;
  border-radius: 10px;
  background-color: #fff;
}

#orderNoticePage .main .title-circle {
  position: absolute;
  top: -80rpx;
  left: 50%;
  width: 23vw;
  height: 23vw;
  transform: translate3d(-50%, 0, 0);
  border: 5px solid #fff;
  border-radius: 50%;
  box-shadow: 0px 10px 24px 0px rgba(0,0,0,0.1);
}

#orderNoticePage .main .title-yhxz {
  width: 40vw;
  height: 40rpx;
}

#orderNoticePage .main .desc {
  min-height: 400rpx;
  padding: 5vw;
  color: #333;
  font-size: 28rpx;
  text-align: left;
  text-indent: 2em;
}

#orderNoticePage .main .btn {
  width: 100%;
  padding: 3vw 0;
  color: #fff;
  font-size: 30rpx;
  border-radius: 10px;
}

#commentPage {
  position: absolute;
  top: 0;
  left: 0;
  background-color: rgba(0,0,0,.8);
}

#commentPage .main {
  position: relative;
  width: 80vw;
  padding: 15vw 7vw 10vw;
  text-align: center;
  border-radius: 10px;
  background-color: #fff;
}

#commentPage .main .title-circle {
  position: absolute;
  top: -80rpx;
  left: 50%;
  width: 23vw;
  height: 23vw;
  transform: translate3d(-50%, 0, 0);
  border: 5px solid #fff;
  border-radius: 50%;
  box-shadow: 0px 10px 24px 0px rgba(0,0,0,0.1);
}

#commentPage .main text {
  display: block;
}

#commentPage .main .name {
  color: #242e42;
  font-size: 32rpx;
  font-weight: 600;
}

#commentPage .main .desc1 {
  margin-top: 30rpx;
  color: #e5573f;
  font-size: 32rpx;
}

#commentPage .main .desc2 {
  color: #a1a1a5;
  font-size: 26rpx;
}

#commentPage .main .star-box {
  width: 100%;
  margin-top: 30rpx;
  padding: 0 6vw;
}

#commentPage .main .star-box image {
  width: 60rpx;
  height: 60rpx;
}

#commentPage .main .comment-box {
  width: 100%;
  margin-top: 30rpx;
}

#commentPage .main .comment-box textarea {
  width: 100%;
  height: 200rpx;
  padding: 4vw;
  text-align: left;
  font-size: 32rpx;
  border-radius: 5px;
  background-color: #f7f7f9;
}

#commentPage .main .btn {
  width: 100%;
  margin-top: 50rpx;
  padding: 3vw 0;
  color: #fff;
  font-size: 30rpx;
  border-radius: 10px;
}

#commentPage .main .close {
  position: absolute;
  bottom: -160rpx;
  left: 50%;
  width: 20vw;
  height: 20vw;
  transform: translate3d(-50%, 0, 0);
}

.flex-start {
  justify-content: flex-start;
}
.flex-row-start {
  align-items: flex-start;
}

#orderPage.flex-start .main {
  margin-top: 6vw;
} 

#commentPage.flex-row-start .main {
  margin-top: 17vw;
}


