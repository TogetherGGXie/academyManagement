/* pages/dbxx-detail/dbxx-detail.wxss */
@import "../../wxParse/wxParse.wxss";
page {
  background: #0C72C2;
}
.page {
  padding: 1vh 3vw;
}
.overflow-hide {
  height: 98vh;
  overflow: hidden;
}
.top {
  position: relative;
  background-color: #fff;
  border-radius: 8px;
  padding: 3vw 3vw 5vw 3vw;
}
.head-image {
  width: 21vw;
  height: 27vw;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
  display: inline-block;
  margin-right: 3vw;
}
.name {
  display: inline-block;
  color: #000;
  font-size: 15px;
}
.level {
  font-size: 13px;
  color: #aaa6a6;
}
.lian-left {
  position: absolute;
  width: 3vw;
  height: 9.94vw;
  left: 3vw;
  bottom: -6vw;
  z-index: 2;
}
.lian-right {
  position: absolute;
  width: 3vw;
  height: 9.94vw;
  right: 3vw;
  bottom: -6vw;
  z-index: 2;
}
.btn {
  position: absolute;
  background: linear-gradient(rgb(249,102,100), rgb(250, 130, 110));
  color: #fff;
  font-size: 15px;
  border-radius: 20px;
  padding: 1vw 6vw 1.5vw 6vw;
  bottom: 5vw;
  right: 4vw;
}
.text {
  display: inline-block;
  position: absolute;
}
.content {
  padding: 6vw 4vw 2vw 4vw;
  width: 86vw;
  border-radius: 8px;
  background-color: #fff;
  margin-top: 2vw;
  font-size: 14px;
}
.icon {
  position: relative;
  height: 16px;
  width: 16px;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
  display: inline-block;
  margin-right: 2vw;
  top: 0.5vw;
}
.fire {
  width: 4vw;
  height: 5.6vw;
  margin-bottom:-2px;
  margin-right:5px;
}
.fire-text {
  position: relative;
  display: inline-block;
  margin-left: -30px;
  top: 10vw;
}
.grey-text {
  color: #7e7e7e;
}
.diplay-inline {
  display: inline-block;
}
.label {
  position: relative;
  display: inline-block;
  margin-bottom: 1px;
  margin-right: 3vw;
}
.unit {
  position: relative;
  margin-bottom: 3vw;
  overflow: hidden;
  _zoom: 1;
}
.float-right {
  width: 54vw;
  float: right;
  right: 0px;
  top: 0px;
}
.text-center {
  text-align: center;
}
.bg {
  position: absolute;
  background-color: rgba(0, 0, 0, 0.8);
  height: 100%;
  width: 100%;
  top: 0px;
  left: 0px;
  z-index: 6;
}
.frame {
  position: absolute;
  top: 10vw;
  width: 80vw;
  background-color: #fff;
  background-image: url('https://st-file.yunban.cn/20180524/top.png');
  background-position: top;
  background-size: contain;
  background-repeat: no-repeat;
  z-index: 7;
  display: inline-block;
  left: 0px;
  right: 0px;
  margin: auto;
  border-radius: 6px;
  padding-top: 20vw;
}
.item {
  position: relative;
  margin: 8vw 8vw 2vw 8vw;
  font-size: 14px;
  border-bottom: 1.5px solid #e1e1e1;
}
.label {
  font-weight: 600;
}
input {
  margin-top: 6px;
  padding-bottom: 5px;
  color: #e65740;
}
.submit {
  font-size: 16px;
  color:  #fff;
  background: linear-gradient(rgb(249,102,100), rgb(250, 130, 110));
  display: inline-block;
  padding: 1vw 15vw 1.5vw 15vw;
  border-radius: 20px;
  position: relative;
  margin: 6vw 0vw;
}
.close {
  width: 10vw;
  height: 10vw;
  background-image: url('https://st-file.yunban.cn/20180524/close.png');
  background-position: center;
  background-size: cover; 
  background-repeat: no-repeat;
  position: absolute;
  right: 0px;
  left: 0px;
  margin: auto;
  bottom: -16vw;
  z-index: 7;
}
.focus {
  border-bottom: 1.5px solid #e65740;
}
.code-input {
  width: 40vw;
}
.code {
  position: absolute;
  display: inline-block;
  color: #e1e1e1;
  font-size: 12px;
  border: 1px solid #e1e1e1;
  padding: 2px 4px;
  bottom: 5px;
  right: 0px;
}
.success {
  position: absolute;
  top: 10vw;
  width: 64vw;
  background-color: #fff;
  z-index: 7;
  display: inline-block;
  left: 0px;
  right: 0px;
  margin: auto;
  border-radius: 6px;
  padding: 8vw 8vw 0vw 8vw;
  text-align: left;
  font-size: 15px;
  font-weight: 600;
}
.success-image {
  display: inline-block;
  width: 64vw;
  height: 60vw;
  background-image: url('https://st-file.yunban.cn/20180524/success.png');
  background-position: top;
  background-size: contain;
  background-repeat: no-repeat;
}
.hide {
  display: none;
}
.show {
  border: 1px solid #e65740;
  color: #e65740;
}
.detail {
  font-size: 14px;
  margin-top: 2vw;
}