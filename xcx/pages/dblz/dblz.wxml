<!--pages/dblz/dblz.wxml-->
<view class="page">
  <view class="success">
    <view class="success-image"></view>
    <view class="text">您已成功签到{{time}}次</view>
  </view>
  <navigator url='../sign/sign' hover-class='none'>
    <view class="item">
      <view class="icon" style="background-image:url('https://st-file.yunban.cn/20180524/clock.png')"></view>
      <view>历史记录</view>
      <view class="arrow"></view>
    </view>
  </navigator>
  
  <navigator url='../group/group' hover-class='none'>
    <view class="item">
      <view class="icon" style="background-image:url('https://st-file.yunban.cn/20180524/message.png')"></view>
      <view>分组讨论内容</view>
      <view class="arrow"></view>
    </view>
  </navigator>
  <navigator url='../record/record' hover-class='none'>
    <view class="item">
      <view class="icon" style="background-image:url('https://st-file.yunban.cn/20180524/day.png')"></view>
      <view>活动签到记录</view>
      <view class="arrow"></view>
    </view>
  </navigator>
</view>
