/* pages/sign/sign.wxss */
page {
  background: #e65740;
}
.page {
  width: 94vw;
  display: inline-block;
  padding: 1vw 3vw;
}
.item {
  position: relative;
  border-radius: 8px;
  background-color: #fff;
  font-size: 14px;
  padding: 3vw 0px;
  margin-bottom: 2vw;
}
.view {
  padding: 3vw 6vw 1vw 6vw;
}
.sign {
  position: relative;
  display: inline-block;
  color: #fff;
  background: linear-gradient(rgb(249,141,102), rgb(230, 87, 64));
  border-radius: 0px 20px 20px 0px;
  font-size: 13px;
  padding: 1vw 3vw;
}
.clock {
  position: relative;
  display: inline-block;
  background-image: url(https://st-file.yunban.cn/20180524/clock.png);
  width: 15px;
  height: 15px;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
  top: 1vw;
  margin-right: 2vw;
}
.text,.time {
  display: inline-block;
  margin-right: 4vw;
}
.time {
  color: #7e7e7e;
}
.nothing {
  position: absolute;
  background-image: url(https://st-file.yunban.cn/20180524/nothing.png);
  background-position: center;
  background-repeat: no-repeat;
  background-size: contain;
  width: 170px;
  height: 170px;
  top: 0px;
  right: 0px;
  left: 0px;
  bottom: 0px;
  margin: auto;
}
.hide {
  display: none;
}