<!--pages/group/group.wxml-->
<view class="page">
  <view class="item" wx:for="{{list}}" data-id="{{itemName.groupId}}" data-name="{{itemName.groupName}}" data-num="{{itemName.num}}" wx:for-index="idx" wx:for-item="itemName" bindtap='turnTo'>
    <view class="title">
      <view class="title-text">{{itemName.groupName}}</view>
      <view class="title-count">({{itemName.num}})</view>
    </view>
    <view class="last-content">{{itemName.message.message}}</view>
    <view class="news {{itemName.unreadMessage == 0?'hide':''}}">{{itemName.unreadMessage >= 10?'‧‧‧':itemName.unreadMessage}}</view>
    <view class="date">{{itemName.message.lastTime}}</view>
  </view>
  <view class="nothing {{nothing?'hide':''}}"></view>
</view>
