/* pages/dbzj/acticles/articles.wxss */
page {
  background: #e65740;
}
.page-container {
  width: 94vw;
  height: 100vh;
  display: inline-block;
  padding: 1vw 3vw;
}
scroll-view {
  width: 100%;
  height: 100%;
}

.news {
  position: relative;
  width: 82vw;
  padding: 2vw 6vw 7vw 6vw;
  background-color: #fff;
  border-radius: 8px;
  margin-bottom: 2vw;
}
.news:last-child .lian-left,.news:last-child .lian-right {
  display: none;
}
.new-image {
  width: 82vw;
  height: 60vw;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
  margin: 4vw 0px;
}
.content {
  font-size: 14px;
  text-align: justify;
}
.grey-text {
  color: #999999;
  font-size: 12px;
}
.relative {
  position: relative;
}
.read-view {
  position: absolute;
  font-size: 12px;
  color: #ffaa46;
  background-color: #fff5e5;
  padding: 1vw 2vw;
  right: 0px;
  top: 0px;
}
.lian-left {
  position: absolute;
  width: 3vw;
  height: 9.94vw;
  left: 3vw;
  bottom: -6vw;
  z-index: 2;
}
.lian-right {
  position: absolute;
  width: 3vw;
  height: 9.94vw;
  right: 3vw;
  bottom: -6vw;
  z-index: 2;
}
.nothing {
  position: absolute;
  background-image: url(https://st-file.yunban.cn/20180524/nothing.png);
  background-position: center;
  background-repeat: no-repeat;
  background-size: contain;
  width: 170px;
  height: 170px;
  top: 0px;
  right: 0px;
  left: 0px;
  bottom: 0px;
  margin: auto;
}
.hide {
  display: none;
}