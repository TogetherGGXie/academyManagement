<!--pages/dbxx/dbxx.wxml-->
<view class='page'>
  <view class="tabs">
    <view class="tab {{index == idx?'choose':''}}" wx:for="{{text}}" data-id="{{idx}}" wx:for-index="idx" wx:for-item="itemName" bindtap='choose'>{{itemName}}</view>
  </view>
  <view class="tabs" wx:if="{{showZhenTabs}}">
    <view class="zhenTab {{zhenIndex == idx?'choose':''}}" wx:for="{{zhenTabs}}" data-id="{{idx}}" wx:for-index="idx" wx:for-item="itemName" bindtap='chooseZhenTab'>{{itemName}}</view>
  </view>
  <scroll-view scroll-y style="height: {{height}}px;" bindscrolltolower="lower">
    <view class="list">
      <view class="item" wx:for="{{list}}" data-id="{{idx}}" wx:for-index="idx" wx:for-item="itemName" data-id="{{itemName.id}}" bindtap='turnTo'>
        <view class="head-image" style="background-image:url({{itemName.image}})"></view>
        <view class="text">{{itemName.realName}}</view>
        <view class="fire-text">
          <image class="fire" src="https://st-file.yunban.cn/20180524/fire.png"></image>
          <view class="diplay-inline grey-text">已被{{itemName.orderNum}}人约见</view>
        </view>
        <view class="btn">约见</view>
      </view>
    </view>
  </scroll-view>
  <view class="nothing {{nothing?'hide':''}}"></view>
</view>

