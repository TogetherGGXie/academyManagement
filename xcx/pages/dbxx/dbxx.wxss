} */
.head-image {
  width:21vw;
  height:27vw;
  display: inline-block;
  background-position: center top;
  background-repeat: no-repeat;
  background-size: cover;
}
.text {
  color: #000;
  font-size: 14px;
  margin-bottom: 4vw;
  display: inline-block;
  position: absolute;
  margin-left: 5px;
}
.fire {
  width: 4vw;
  height: 5.6vw;
  margin-bottom:-2px;
  margin-right:5px;
}
.grey-text {
  color: #999999;
  font-size: 13px;
}
.diplay-inline {
  display: inline-block;
}
.btn {
  background:linear-gradient(rgb(249,102,100), rgb(250, 130, 110));
  display: inline-block;
  position: absolute;
  bottom: 4vw;
  padding: 1vw 6vw 1.5vw 6vw;
  color: #fff;
  font-size: 14px;
  border-radius: 20px;
  right: 5vw;
}
.nothing {
  position: absolute;
  background-image: url(https://st-file.yunban.cn/20180524/nothing.png);
  background-position: center;
  background-repeat: no-repeat;
  background-size: contain;
  width: 170px;
  height: 170px;
  top: 0px;
  right: 0px;
  left: 0px;
  bottom: 0px;
  margin: auto;
}
.hide {
  display: none;
}
.fire-text {
  position: absolute;
  display: inline-block;
  margin-left: 5px;
  top: 10vw;
}