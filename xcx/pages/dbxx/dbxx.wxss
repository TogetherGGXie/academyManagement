/* pages/dbxx/dbxx.wxss */
page {
  background: #e65740;
}
.page {
  padding: 1vw 3vw;
}
.tabs {
  width: 96vw;
  display: inline-block;
  color: #e65740;
  background-color: #fff;
  border-radius: 20px;
}
.tab {
  font-size: 3vw;
  width: 32vw;
  float: left;
  text-align: center;
  padding: 6px 0vw 6.5px 0vw;
}
.zhenTab {
  font-size: 3vw;
  width: 24vw;
  float: left;
  text-align: center;
  padding: 6px 0vw 6.5px 0vw;
}
.choose {
  background:linear-gradient(rgb(249,102,100), rgb(250, 130, 110));
  color: #fff;
  border-radius: 20px;
  float: left;
}
.list {
  width: 94vw;
  overflow: hidden;
  _zoom: 1;
}
.item {
  position: relative;
  background-color: #fff;
  border-radius: 8px;
  padding: 4vw 4vw 2vw 4vw;
  width: 86vw;
  text-align: left;
  float: left;
  margin: 1.25vw auto;
}
