<!--pages/check/check.wxml-->
<view class="page">
  <view class="frame">
    <view class="head">
      <view class="head-image" style="background-image:url({{userInfo.avatarUrl}})"></view>
      <view class="user-name">{{userInfo.nickName}}</view>
    </view>
    <view class="relative">
      <view class="icon" style="background-image:url(https://st-file.yunban.cn/20180524/user.png)"></view>
      <view class="label">姓名</view>
      <input placeholder='请输入姓名' bindinput='bindName' focus="{{focus1}}"/>
    </view>
    <view class="relative">
      <view class="icon" style="background-image:url(https://st-file.yunban.cn/20180524/telephone.png)"></view>
      <view class="label">手机</view>
      <input placeholder='请输入手机号'  bindinput='bindPhone' focus="{{focus2}}"/>
    </view>
    <view class="relative">
      <view class="icon" style="background-image:url(https://st-file.yunban.cn/20180524/key.png)"></view>
      <view class="label">验证码</view>
      <input placeholder='请输入验证码' bindinput='bindCode' focus="{{focus3}}"/>
      <view class="code {{code && time == 0?'show':''}}" bindtap='getCode'>{{time == 0?'获取验证码':time +'s后重新发送'}}</view>
    </view>
    <view class="text-center">
      <view class="btn" bindtap='check'>登录</view>
    </view>
  </view>
</view>
